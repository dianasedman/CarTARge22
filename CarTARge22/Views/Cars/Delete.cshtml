@model CarTARge22.Models.Cars.CarsDeleteViewModel

<header class="major" style="padding: 20px;">
    <h2 > DELETE</h2>
    <h3 style="color:white;">There is no going back. Are you sure?</h3>
</header>

<body style="background-image:url(https://images.pexels.com/photos/754595/pexels-photo-754595.jpeg); background-size:cover; opacity: 0.8;">
    <div style="padding: 20px; text-align: center; padding: 5%; color: white;">
            <dl class="row">
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-2 col-form-label"></label> 
                @Html.DisplayFor(model => model.Id)
            </div>

            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.Name)
            </div>

            <div class="form-group row">
                <label asp-for="Brand" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.Brand)
            </div>

            <div class="form-group row">
                <label asp-for="Year" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.Year)
            </div>

            <div class="form-group row">
                <label asp-for="Transmission" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.Transmission)
            </div>

            <div class="form-group row">
                <label asp-for="Color" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.Color)
            </div>

            <div class="form-group row">
                <label asp-for="Fuel" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.Fuel)
            </div>

            <div class="form-group row">
                <label asp-for="TopSpeed" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.TopSpeed)
            </div>

            <div class="form-group row">
                <label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.CreatedAt)
            </div>

            <div class="form-group row">
                <label asp-for="ModifiedAt" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.ModifiedAt)
            </div>
        </dl>

        <form asp-action="DeleteConfirmation">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn" style="background-color:rebeccapurple; padding: 10px 20px; color:white;" />
            <a asp-action="Index" asp-controller="cars" class="btn" style="background-color:palevioletred; padding: 10px 20px; color:white">Back</a>
        </form>
    </div>
</body>