@model CarTARge22.Models.Cars.CarsCreateUdateVIewModel

@if(Model.Id.HasValue)
{
    <header class="major">
        <h2> UPDATE</h2>
    </header>
}
else
{
    <header class="major">
        <h2> CREATE</h2>
    </header>
}

<body style="background-image:url(https://images.pexels.com/photos/845406/pexels-photo-845406.jpeg); background-size:cover; opacity: 0.8;">

<section>
    <div style="padding: 20px; text-align: center; padding: 5%">
        <form method="post" enctype="multipart/form-data">
            <input asp-for="Id" type="hidden" />
            <input asp-for="CreatedAt" type="hidden" />
            <input asp-for="ModifiedAt" type="hidden" />

            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-5">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Brand" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-5">
                    <input asp-for="Brand" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Year" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-5">
                    <input asp-for="Year" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Transmission" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-5">
                    <input asp-for="Transmission" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Color" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-5">
                    <input asp-for="Color" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Fuel" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-5">
                    <input asp-for="Fuel" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="TopSpeed" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-5">
                    <input asp-for="TopSpeed" class="form-control" />
                </div>
            </div>

            <hr/>
            @if(Model.Id.HasValue)
            {
                    <input asp-action="update" asp-controller="cars" type="submit" class="btn" style="background-color: greenyellow; padding: 10px 20px" value="Create" />
            }

            else
            {
                    <input asp-action="create" asp-controller="cars" type="submit" class="btn" style="background-color: greenyellow; padding: 10px 20px" value="Create" />

            }
            <a asp-action="index" class="btn" style="background-color:salmon; padding: 10px 20px">Index</a>

        </form>
    </div>
</section>
</body>