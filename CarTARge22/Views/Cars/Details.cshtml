@model CarTARge22.Models.Cars.CarsDetailsViewModel

<header class="major">
    <h2 style="padding: 20px;"> DETAILS</h2>
</header>

<body style="background-image:url(https://images.pexels.com/photos/226460/pexels-photo-226460.jpeg); background-size:cover; opacity: 0.8;">
    <div style="padding: 20px; text-align: left; padding: 5%;">

        <dl class="row">
            <div class="form-group-row">
                <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.Id)
            </div>

            <div class="form-group-row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.Name)
            </div>

            <div class="form-group-row">
                <label asp-for="Brand" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.Brand)
            </div>

            <div class="form-group-row">
                <label asp-for="Year" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.Year)
            </div>

            <div class="form-group-row">
                <label asp-for="Transmission" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.Transmission)
            </div>

            <div class="form-group-row">
                <label asp-for="Color" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.Color)
            </div>
            <div class="form-group-row">
                <label asp-for="Fuel" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.Fuel)
            </div>
            <div class="form-group-row">
                <label asp-for="TopSpeed" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.TopSpeed)
            </div>
            <div class="form-group-row">
                <label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.CreatedAt)
            </div>
            <div class="form-group-row">
                <label asp-for="ModifiedAt" class="col-sm-2 col-form-label"></label>
                @Html.DisplayFor(model => model.ModifiedAt)
            </div>
        </dl>
        <a asp-action="Index" asp-controller="cars" class="btn" style="background-color:mediumaquamarine; padding: 10px 20px">Back</a>
    </div>

</body>